<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_welcome">
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textColor">@color/txtWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_username">
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textColor">@color/txtWhite</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="style_desc">
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textColor">@color/txtWhite</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="txt_desc_card">
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textColor">@color/txtWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="txt_title_card">
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textColor">@color/txtWhite</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="txt_item_history">
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/txtWhite</item>
    </style>

</resources>